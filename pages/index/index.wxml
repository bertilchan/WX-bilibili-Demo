<view class="main">
  <!-- 公共头部 -->
  <MyTitle></MyTitle>
  <!-- 首页导航 -->
  <view class="nav_wrap">
    <!-- 自己滚动区域的组件 -->
    <scroll-view class="nav" scroll-x>
      <view class="nav_item {{index===currentIndexNav ? 'active' : ''}}" 
      bindtap="activeNav" 
      data-index="{{index}}"
      wx:for="{{navList}}" wx:key="{{index}}">
        {{item.text}}
      </view>
    </scroll-view>
  </view>
  <!-- 轮播图 -->
  <view class="slides">
    <swiper autoplay indicator-dots circular interval="2000">
      <swiper-item wx:for="{{swiperList}}" wx:key="{{index}}">
        <navigator>
          <image mode="widthFix" src="{{item.imgSrc}}"></image>
        </navigator>
      </swiper-item>
    </swiper>
  </view>
  <!-- 视频列表 -->
  <view class="video_wrap">
    <navigator url="../detail/detail?id={{item.id}}" class="video_item" wx:for="{{videoList}}" wx:key="{{index}}" >
      <!-- 图片容器 -->
      <view class="video_img">
        <!-- 图片 -->
        <image src="{{item.imgSrc}}" mode="widthFix"></image>
        <!-- 播放量和评论 -->
        <view class="video_info">
          <!-- 播放量 -->
          <view class="play_count_wrap">
            <text class="fa fa-play-circle-o"></text>
            <text class="play_count">{{item.playCount}}</text>
          </view>
          <!-- 评论 -->
          <view class="comment_count_row">
            <text class="fa fa-commenting-o"></text>
            <text class="comment_count">{{item.commentCount}}</text>
          </view>
        </view>
      </view>
      <!-- 标题 -->
      <view class="video_title">
        {{item.desc}}
      </view>
    </navigator>
  </view>
</view>